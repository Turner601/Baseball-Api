<%- include('../partials/header'); %>

<main class="main main-batting-avgs-career container">
    <h2 class="main-h2 text-center">
        <%= name %>
    </h2>
    <section class="section section-battincareer-season">
        <div class="row">
            <% data.forEach(item=> { %>
                <div class="col-md-2">
                    <figure class="figure figure-batting-avgs-career">
                        <figcaption class="figcaption figcap-batting-avgs-career">
                            <u>Name:</u> <%= item.Player %>
                        </figcaption>
                        <figcaption class="figcaption figcap-batting-avgs-career">
                            <u>Age:</u> <%= item["Years-Age"] %>
                        </figcaption>
                        <figcaption class="figcaption figcap-batting-avgs-career">
                            <u>Batting Average:</u> <%= item["Batting-Avg"] %>
                        </figcaption>
                        <figcaption class="figcaption figcap-batting-avgs-career">
                            <u>Bats:</u> <%= item.Bats %>
                        </figcaption>
                        <figcaption class="figcaption figcap-batting-avgs-career">
                            <u>Rank:</u> <%= item.Rank %>
                        </figcaption>
                    </figure>
                </div>
                <% }) %>
        </div>
    </section>
</main>

<%- include('../partials/footer'); %>